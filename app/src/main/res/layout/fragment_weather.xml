<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/com_facebook_device_auth_text"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날씨를 볼 경기장을 선택해 주세요"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TableLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/jamsil"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="?android:attr/selectableItemBackground">

                            <ImageView
                                android:id="@+id/col1"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/jamsilText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="잠실 야구장(두산,LG)" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/skydom"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/col2"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/skydomText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="고척 스카이돔(넥센)" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/munhak"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/col3"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/munhakText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="SK 행복드림구장" />

                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/eagles"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/col4"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/eaglesText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="한화 이글스파크" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lions"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/col5"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/lionsText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="삼성 라이온즈파크" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/champions"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/col6"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/championsText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="기아 챔피언스필드" />

                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/giants"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/col7"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/giantsText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="사직 야구장(롯데)" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/wizpark"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/col8"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/wizparkText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="KT 위즈파크" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/masan"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/col9"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/masanText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="마산 야구장(NC)" />

                        </LinearLayout>

                    </TableRow>


                </TableLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
