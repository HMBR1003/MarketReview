<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.constraint.ConstraintLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/testButtonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홈"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/testButtonHome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="디비테스트"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/testButtonHome" />

    <Button
        android:id="@+id/deliveryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달 음식"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="250dp" />

    <Button
        android:id="@+id/takeoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테이크 아웃"
        android:layout_marginTop="260dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp" />

    <Button
        android:id="@+id/baseinfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="야구장 날씨"
        android:layout_marginTop="370dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="160dp" />

    <Button
        android:id="@+id/testButtonHome3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글라이드테스트"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/testButtonHome"
        android:layout_marginStart="150dp" />


</android.support.constraint.ConstraintLayout>
</layout>