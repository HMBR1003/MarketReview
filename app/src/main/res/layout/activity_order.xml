<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:sl="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_base_height="130"
                    sl:scale_base_width="1080">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="야구장 정보"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        sl:scale_height="90"
                        sl:scale_left="30"
                        sl:scale_textsize="70"
                        sl:scale_width="600" />
                </com.ssomai.android.scalablelayout.ScalableLayout>


                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_base_height="120"
                    sl:scale_base_width="1080">

                    <TextView
                        android:id="@+id/stadiumText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="stadiumText"
                        android:textColor="@color/darkgray"
                        sl:scale_height="100"
                        sl:scale_left="360"
                        sl:scale_textsize="60"
                        sl:scale_width="750" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="야구장 위치 : "
                        android:textColor="@color/darkgray"
                        sl:scale_height="120"
                        sl:scale_left="30"
                        sl:scale_textsize="60"
                        sl:scale_width="340" />

                </com.ssomai.android.scalablelayout.ScalableLayout>


                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:id="@+id/seatContainerJamsil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_base_height="400"
                    sl:scale_base_width="1080">

                    <ImageView
                        android:id="@+id/seatImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/black_teduri"
                        android:scaleType="fitXY"
                        sl:scale_height="360"
                        sl:scale_left="30"
                        sl:scale_top="20"
                        sl:scale_width="360" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="좌석 정보"
                        android:textColor="@color/black"
                        sl:scale_height="90"
                        sl:scale_left="450"
                        sl:scale_textsize="60"
                        sl:scale_top="60"
                        sl:scale_width="500" />

                    <TextView
                        android:id="@+id/seatText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="좌석을 선택해주세요"
                        android:textColor="@color/red"
                        sl:scale_height="250"
                        sl:scale_left="450"
                        sl:scale_textsize="50"
                        sl:scale_top="150"
                        sl:scale_width="500" />
                </com.ssomai.android.scalablelayout.ScalableLayout>

                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_base_height="270"
                    sl:scale_base_width="1080">

                    <ImageView
                        android:id="@+id/seatButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:onClick="OnClicked"
                        android:scaleType="fitXY"
                        android:src="@drawable/seat_select"
                        sl:scale_height="80"
                        sl:scale_left="45"
                        sl:scale_top="10"
                        sl:scale_width="330" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/backgroundColor"
                        sl:scale_height="80"
                        sl:scale_top="190"
                        sl:scale_width="1080" />

                </com.ssomai.android.scalablelayout.ScalableLayout>

                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_base_height="500"
                    sl:scale_base_width="1080">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="주문자 정보"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        sl:scale_height="90"
                        sl:scale_left="30"
                        sl:scale_textsize="70"
                        sl:scale_top="20"
                        sl:scale_width="600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="연락처 : "
                        android:textColor="@color/darkgray"
                        sl:scale_height="140"
                        sl:scale_left="30"
                        sl:scale_textsize="60"
                        sl:scale_top="120"
                        sl:scale_width="280" />

                    <EditText
                        android:id="@+id/telEdit"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="핸드폰 번호를 입력해주세요"
                        android:inputType="number"
                        android:textColor="@color/darkgray"
                        sl:scale_height="140"
                        sl:scale_left="310"
                        sl:scale_textsize="60"
                        sl:scale_top="120"
                        sl:scale_width="750" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="요청 사항 : "
                        android:textColor="@color/darkgray"
                        sl:scale_height="140"
                        sl:scale_left="30"
                        sl:scale_textsize="60"
                        sl:scale_top="260"
                        sl:scale_width="280" />

                    <EditText
                        android:id="@+id/memoEdit"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="요청사항을 입력해주세요"
                        android:inputType="number"
                        android:textColor="@color/darkgray"
                        sl:scale_height="140"
                        sl:scale_left="310"
                        sl:scale_textsize="60"
                        sl:scale_top="260"
                        sl:scale_width="750" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/backgroundColor"
                        sl:scale_height="80"
                        sl:scale_top="420"
                        sl:scale_width="1080" />
                </com.ssomai.android.scalablelayout.ScalableLayout>

                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_base_height="130"
                    sl:scale_base_width="1080">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="배달 음식 주문 내역"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        sl:scale_height="130"
                        sl:scale_left="30"
                        sl:scale_textsize="70"
                        sl:scale_width="600" />

                </com.ssomai.android.scalablelayout.ScalableLayout>

                <LinearLayout
                    android:id="@+id/orderContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_base_height="130"
                    sl:scale_base_width="1080">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="총 결제 금액"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        sl:scale_height="130"
                        sl:scale_left="30"
                        sl:scale_textsize="70"
                        sl:scale_width="450" />

                    <TextView
                        android:id="@+id/finalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|end"
                        android:text="0원"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        sl:scale_height="130"
                        sl:scale_left="450"
                        sl:scale_textsize="70"
                        sl:scale_width="600" />
                </com.ssomai.android.scalablelayout.ScalableLayout>


                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    sl:scale_base_height="460"
                    sl:scale_base_width="1080">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/backgroundColor"
                        sl:scale_height="80"
                        sl:scale_width="1080" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_background_white"
                        android:gravity="center"
                        android:text="결제방식\n선택"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        sl:scale_height="300"
                        sl:scale_textsize="70"
                        sl:scale_top="80"
                        sl:scale_width="480" />

                    <TextView
                        android:id="@+id/cardBuyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/border_background_white_top"
                        android:gravity="center"
                        android:onClick="OnClicked"
                        android:text="카드결제"
                        android:textColor="@color/darkgray"
                        sl:scale_height="150"
                        sl:scale_textsize="60"
                        sl:scale_top="80"
                        sl:scale_width="600" />

                    <TextView
                        android:id="@+id/moneyBuyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/border_background_white_bottom"
                        android:gravity="center"
                        android:onClick="OnClicked"
                        android:text="현금결제"
                        android:textColor="@color/darkgray"
                        sl:scale_height="150"
                        sl:scale_textsize="60"
                        sl:scale_top="230"
                        sl:scale_width="600" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/backgroundColor"
                        sl:scale_height="80"
                        sl:scale_top="380"
                        sl:scale_width="1080" />

                </com.ssomai.android.scalablelayout.ScalableLayout>


                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundColor"
                    sl:scale_base_height="80"
                    sl:scale_base_width="1080">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="※본 어플은 만나서결제(현장결제)만 지원합니다."
                        sl:scale_height="80"
                        sl:scale_left="20"
                        sl:scale_textsize="30"
                        sl:scale_top="20"
                        sl:scale_width="1080" />

                </com.ssomai.android.scalablelayout.ScalableLayout>

                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundColor"
                    sl:scale_base_height="180"
                    sl:scale_base_width="1080">

                    <info.hoang8f.widget.FButton
                        android:id="@+id/orderButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="OnClicked"
                        android:text="주문 완료"
                        android:textColor="@color/white"
                        sl:scale_height="160"
                        sl:scale_textsize="80"
                        sl:scale_width="1000" />
                </com.ssomai.android.scalablelayout.ScalableLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>