        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="10dp"/>-->

    <!--<com.facebook.login.widget.LoginButton-->
        <!--android:id="@+id/button_facebook_login"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="10dp"/>-->
    </LinearLayout>

</LinearLayout>
</layout>